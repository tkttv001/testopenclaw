{
  "name": "opencode-cloud",
  "version": "25.1.3",
  "description": "Cross-platform CLI for opencode-cloud (includes prebuilt binaries)",
  "type": "module",
  "license": "MIT",
  "author": "pRizz",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pRizz/opencode-cloud.git",
    "directory": "packages/cli-node"
  },
  "homepage": "https://github.com/pRizz/opencode-cloud",
  "bugs": {
    "url": "https://github.com/pRizz/opencode-cloud/issues"
  },
  "keywords": ["opencode", "ai", "cloud", "docker", "cli", "service"],
  "bin": {
    "opencode-cloud": "./dist/index.js",
    "occ": "./dist/index.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "os": ["darwin", "linux"],
  "cpu": ["x64", "arm64"],
  "optionalDependencies": {
    "@opencode-cloud/cli-node-darwin-arm64": "workspace:*",
    "@opencode-cloud/cli-node-darwin-x64": "workspace:*",
    "@opencode-cloud/cli-node-linux-arm64": "workspace:*",
    "@opencode-cloud/cli-node-linux-x64": "workspace:*",
    "@opencode-cloud/cli-node-linux-arm64-musl": "workspace:*",
    "@opencode-cloud/cli-node-linux-x64-musl": "workspace:*"
  },
  "scripts": {
    "build": "tsc || (echo \"Error: TypeScript compiler (tsc) not found. Install dev dependencies or run npm i -D typescript before building.\" && exit 1)",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "@types/node": "^22.10.7",
    "vitest": "^3.0.0"
  }
}
